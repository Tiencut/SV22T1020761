@model SV22T1020761.Models.Category

@{
    ViewBag.Title = "Xóa danh mục";
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="~/Category">Danh mục sản phẩm</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Xóa danh mục sản phẩm</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa danh mục này? Hành động này không thể hoàn tác.
        </div>
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.CategoryID</dd>
            <dt class="col-sm-3">Tên danh mục:</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>
            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CategoryID" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xóa
            </button>
            <a href="~/Category" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Hủy
            </a>
        </form>
    </div>
</div>
<!--end::Card-->