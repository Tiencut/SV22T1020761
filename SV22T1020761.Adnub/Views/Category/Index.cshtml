@{
    ViewBag.Title = "Danh mục (Mock)";
    var data = new System.Collections.Generic.List<SV22T1020761.Models.Category>
    {
        new SV22T1020761.Models.Category { CategoryID = 1, CategoryName = "Thực phẩm", Description = "Hàng ăn uống" },
        new SV22T1020761.Models.Category { CategoryID = 2, CategoryName = "Điện tử", Description = "Thiết bị điện tử" },
        new SV22T1020761.Models.Category { CategoryID = 3, CategoryName = "Gia dụng", Description = "Đồ gia đình" }
    };
    var displayCount = System.Math.Min(5, data.Count);
}

<div class="content-wrapper">
    <section class="content-header"><h1>Danh mục (Mock)</h1></section>
    <section class="content">
        <div class="card"><div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr><th>#</th><th>Tên</th><th>Mô tả</th></tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < displayCount; i++)
                    {
                        <tr>
                            <td>@data[i].CategoryID</td>
                            <td>@data[i].CategoryName</td>
                            <td>@data[i].Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div></div>
    </section>
</div>
