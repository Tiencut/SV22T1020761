@model SV22T1020761.Models.Customer

@{
    ViewBag.Title = "Xóa khách hàng";
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="~/Customer">Khách hàng</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Xóa khách hàng</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa khách hàng này? Hành động này không thể hoàn tác.
        </div>
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.CustomerID</dd>
            <dt class="col-sm-3">Tên khách hàng:</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>
            <dt class="col-sm-3">Tên liên hệ:</dt>
            <dd class="col-sm-9">@Model.ContactName</dd>
            <dt class="col-sm-3">Tỉnh:</dt>
            <dd class="col-sm-9">@Model.Province</dd>
            <dt class="col-sm-3">Địa chỉ:</dt>
            <dd class="col-sm-9">@Model.Address</dd>
            <dt class="col-sm-3">Điện thoại:</dt>
            <dd class="col-sm-9">@Model.Phone</dd>
            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Khóa:</dt>
            <dd class="col-sm-9">@(Model.IsLocked ? "Có" : "Không")</dd>
        </dl>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CustomerID" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xóa
            </button>
            <a href="~/Customer" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Hủy
            </a>
        </form>
    </div>
</div>
<!--end::Card-->