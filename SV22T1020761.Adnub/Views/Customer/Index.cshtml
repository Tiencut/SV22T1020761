@{
    ViewBag.Title = "Khách hàng (Mock)";
    var data = new System.Collections.Generic.List<SV22T1020761.Models.Customer>
    {
        new SV22T1020761.Models.Customer { CustomerID = 1, CustomerName = "Khách A", ContactName = "A", Province = "Hanoi", Address = "123", Phone = "0123", Email = "a@ex.com", IsLocked = false },
        new SV22T1020761.Models.Customer { CustomerID = 2, CustomerName = "Khách B", ContactName = "B", Province = "HCMC", Address = "456", Phone = "0987", Email = "b@ex.com", IsLocked = false },
        new SV22T1020761.Models.Customer { CustomerID = 3, CustomerName = "Khách C", ContactName = "C", Province = "Da Nang", Address = "789", Phone = "0111", Email = "c@ex.com", IsLocked = true }
    };
    var displayCount = System.Math.Min(5, data.Count);
}

<div class="content-wrapper">
    <section class="content-header"><h1>Khách hàng (Mock)</h1></section>
    <section class="content">
        <div class="card"><div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr><th>#</th><th>Tên</th><th>Liên hệ</th><th>Tỉnh</th><th>Địa chỉ</th><th>Phone</th><th>Email</th><th>Khóa</th></tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < displayCount; i++)
                    {
                        <tr>
                            <td>@data[i].CustomerID</td>
                            <td>@data[i].CustomerName</td>
                            <td>@data[i].ContactName</td>
                            <td>@data[i].Province</td>
                            <td>@data[i].Address</td>
                            <td>@data[i].Phone</td>
                            <td>@data[i].Email</td>
                            <td>@(data[i].IsLocked ? "Có" : "Không")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div></div>
    </section>
</div>
