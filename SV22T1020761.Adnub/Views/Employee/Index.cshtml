@{
    ViewBag.Title = "Nhân viên (Mock)";
    var data = new System.Collections.Generic.List<SV22T1020761.Models.Employee>
    {
        new SV22T1020761.Models.Employee { EmployeeID = 1, FullName = "Nguyen Van A", BirthDate = new System.DateTime(1990,1,1), Address = "Hanoi", Phone = "0123456", Email = "a@ex.com", IsWorking = true, RoleNames = "Admin" },
        new SV22T1020761.Models.Employee { EmployeeID = 2, FullName = "Tran Thi B", BirthDate = new System.DateTime(1992,2,2), Address = "HCMC", Phone = "0987654", Email = "b@ex.com", IsWorking = true, RoleNames = "Staff" }
    };
    var displayCount = System.Math.Min(5, data.Count);
}

<div class="content-wrapper">
    <section class="content-header"><h1>Nhân viên (Mock)</h1></section>
    <section class="content">
        <div class="card"><div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead><tr><th>#</th><th>Họ tên</th><th>Ngày sinh</th><th>Địa chỉ</th><th>Phone</th><th>Email</th><th>Vai trò</th></tr></thead>
                <tbody>
                    @for (int i = 0; i < displayCount; i++)
                    {
                        <tr>
                            <td>@data[i].EmployeeID</td>
                            <td>@data[i].FullName</td>
                            <td>@data[i].BirthDate?.ToString("dd/MM/yyyy")</td>
                            <td>@data[i].Address</td>
                            <td>@data[i].Phone</td>
                            <td>@data[i].Email</td>
                            <td>@data[i].RoleNames</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div></div>
    </section>
</div>
