@model IEnumerable<SV22T1020761.Adnub.Models.OrderListItem>
@{
    ViewBag.Title = "Đơn hàng (Mock)";
}

<div class="content-wrapper">
    <section class="content-header"><h1>Đơn hàng (Mock)</h1></section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <form method="get" asp-action="Index" class="row g-2">
                    <div class="col-md-3">
                        <select name="status" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            <option value="0">Đặt hàng</option>
                            <option value="1">Đã duyệt</option>
                            <option value="2">Đang giao</option>
                            <option value="3">Hoàn tất</option>
                            <option value="4">Hủy</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input type="date" name="fromDate" class="form-control" />
                            <input type="date" name="toDate" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <input type="text" name="customerName" class="form-control" placeholder="Tên khách hàng" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Tìm</button>
                    </div>
                </form>
            </div>
            <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead><tr><th>#</th><th>Khách</th><th>Thời gian</th><th>Tỉnh</th><th>Địa chỉ</th><th>Trạng thái</th></tr></thead>
                <tbody>
                    @foreach (var item in Model ?? Enumerable.Empty<SV22T1020761.Adnub.Models.OrderListItem>())
                    {
                        <tr>
                            <td>@item.OrderID</td>
                            <td>@item.CustomerName</td>
                            <td>@item.OrderTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.DeliveryProvince</td>
                            <td>@item.DeliveryAddress</td>
                            <td>@(item.Status == 0 ? "Đặt hàng" : item.Status == 1 ? "Đã duyệt" : item.Status == 2 ? "Đang giao" : item.Status == 3 ? "Hoàn tất" : item.Status == 4 ? "Hủy" : item.Status.ToString())</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div></div>
    </section>
</div>
