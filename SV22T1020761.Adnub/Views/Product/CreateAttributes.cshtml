@model SV22T1020761.Models.ProductAttribute

@{
    ViewBag.Title = "Thêm thuộc tính sản phẩm";
    int productId = ViewBag.ProductId;
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="~/Product">Sản phẩm</a></li>
        <li class="breadcrumb-item"><a href="~/Product/Detail/@productId">Chi tiết</a></li>
        <li class="breadcrumb-item"><a href="~/Product/ListAttributes/@productId">Thuộc tính</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Thêm thuộc tính sản phẩm</h3>
    </div>
    <div class="card-body">
        <form asp-action="CreateAttributes" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ProductID" value="@productId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="AttributeName" class="form-label">Tên thuộc tính <span class="text-danger">*</span></label>
                        <input type="text" id="AttributeName" name="AttributeName" class="form-control" value="@Model.AttributeName" required />
                        <span asp-validation-for="AttributeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="AttributeValue" class="form-label">Giá trị <span class="text-danger">*</span></label>
                        <input type="text" id="AttributeValue" name="AttributeValue" class="form-control" value="@Model.AttributeValue" required />
                        <span asp-validation-for="AttributeValue" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                        <input type="number" id="DisplayOrder" name="DisplayOrder" class="form-control" value="@Model.DisplayOrder" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Lưu
                    </button>
                    <a href="~/Product/ListAttributes/@productId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<!--end::Card-->

@section Scripts {
    <script>
        // Client-side validation if needed
    </script>
}