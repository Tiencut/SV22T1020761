@model SV22T1020761.Models.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="~/Product">Sản phẩm</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Chi tiết sản phẩm</h3>
        <div class="card-tools">
            <a href="~/Product" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.ProductID</dd>
            <dt class="col-sm-3">Tên sản phẩm:</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>
            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.ProductDescription</dd>
            <dt class="col-sm-3">Nhà cung cấp:</dt>
            <dd class="col-sm-9">@Model.SupplierID</dd>
            <dt class="col-sm-3">Danh mục:</dt>
            <dd class="col-sm-9">@Model.CategoryID</dd>
            <dt class="col-sm-3">Đơn vị:</dt>
            <dd class="col-sm-9">@Model.Unit</dd>
            <dt class="col-sm-3">Giá:</dt>
            <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>
            <dt class="col-sm-3">Ảnh:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="@Model.Photo" alt="Ảnh sản phẩm" class="img-thumbnail" style="width: 200px; height: 200px;" />
                }
            </dd>
            <dt class="col-sm-3">Đang bán:</dt>
            <dd class="col-sm-9">@(Model.IsSelling ? "Có" : "Không")</dd>
        </dl>
        <div class="mt-3">
            <a href="~/Product/ListAttributes/@Model.ProductID" class="btn btn-info">
                <i class="bi bi-list"></i> Thuộc tính
            </a>
            <a href="~/Product/ListPhotos/@Model.ProductID" class="btn btn-info">
                <i class="bi bi-images"></i> Ảnh
            </a>
        </div>
    </div>
</div>
<!--end::Card-->