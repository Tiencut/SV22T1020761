@{
    ViewBag.Title = "Sản phẩm (Mock)";
    var data = new System.Collections.Generic.List<SV22T1020761.Models.Product>
    {
        new SV22T1020761.Models.Product { ProductID = 1, ProductName = "SP A", ProductDescription = "Mô tả A", Unit = "Cái", Price = 100000, IsSelling = true },
        new SV22T1020761.Models.Product { ProductID = 2, ProductName = "SP B", ProductDescription = "Mô tả B", Unit = "Hộp", Price = 200000, IsSelling = true }
    };
    var displayCount = System.Math.Min(5, data.Count);
}

<div class="content-wrapper">
    <section class="content-header"><h1>Sản phẩm (Mock)</h1></section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <form method="get" asp-action="Index" class="row g-2">
                    <div class="col-md-3">
                        <select name="categoryId" class="form-select">
                            <option value="">Tất cả loại</option>
                            <option value="1">Loại A</option>
                            <option value="2">Loại B</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select name="supplierId" class="form-select">
                            <option value="">Tất cả NCC</option>
                            <option value="1">NCC A</option>
                            <option value="2">NCC B</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input type="number" name="priceFrom" class="form-control" placeholder="Giá từ" />
                            <input type="number" name="priceTo" class="form-control" placeholder="Giá đến" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <input type="text" name="productName" class="form-control" placeholder="Tên sản phẩm" />
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary">Tìm</button>
                    </div>
                </form>
            </div>
            <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead><tr><th>#</th><th>Tên</th><th>Mô tả</th><th>Đơn vị</th><th>Giá</th><th>Đang bán</th></tr></thead>
                <tbody>
                    @for (int i = 0; i < displayCount; i++)
                    {
                        <tr>
                            <td>@data[i].ProductID</td>
                            <td>@data[i].ProductName</td>
                            <td>@data[i].ProductDescription</td>
                            <td>@data[i].Unit</td>
                            <td>@data[i].Price.ToString("N0") VNĐ</td>
                            <td>@(data[i].IsSelling ? "Có" : "Không")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div></div>
    </section>
</div>
