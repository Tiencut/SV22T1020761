@model SV22T1020761.Models.PaginationSearchResult<SV22T1020761.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sản phẩm</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách sản phẩm</h3>
        <div class="card-tools">
            <a href="~/Product/Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>
    </div>
    <div class="card-body">
        <!--begin::Search Form-->
        <form method="get" class="mb-3">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" name="searchValue" value="@Model.SearchValue" class="form-control" placeholder="Tìm kiếm theo tên sản phẩm..." />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
        <!--end::Search Form-->

        <!--begin::Table-->
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Tên sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Nhà cung cấp</th>
                    <th>Danh mục</th>
                    <th>Đơn vị</th>
                    <th>Giá</th>
                    <th>Ảnh</th>
                    <th>Đang bán</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Data != null && Model.Data.Count > 0)
                {
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductDescription</td>
                            <td>@item.SupplierID</td>
                            <td>@item.CategoryID</td>
                            <td>@item.Unit</td>
                            <td>@item.Price.ToString("N0") VNĐ</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Photo))
                                {
                                    <img src="@item.Photo" alt="Ảnh" class="img-thumbnail" style="width: 50px; height: 50px;" />
                                }
                            </td>
                            <td>@(item.IsSelling ? "Có" : "Không")</td>
                            <td class="text-center">
                                <a href="~/Product/Detail/@item.ProductID" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                                <a href="~/Product/Edit/@item.ProductID" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                <a href="~/Product/Delete/@item.ProductID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                                <a href="~/Product/ListAttributes/@item.ProductID" class="btn btn-secondary btn-sm">
                                    <i class="bi bi-list"></i> Thuộc tính
                                </a>
                                <a href="~/Product/ListPhotos/@item.ProductID" class="btn btn-secondary btn-sm">
                                    <i class="bi bi-images"></i> Ảnh
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-center">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
        <!--end::Table-->

        <!--begin::Pagination-->
        @if (Model.RowCount > Model.PageSize)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= (Model.RowCount + Model.PageSize - 1) / Model.PageSize; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" href="?page=@i&searchValue=@Model.SearchValue">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
        <!--end::Pagination-->
    </div>
</div>
<!--end::Card-->
