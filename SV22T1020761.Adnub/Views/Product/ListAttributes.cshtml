@model IList<SV22T1020761.Models.ProductAttribute>

@{
    ViewBag.Title = "Thuộc tính sản phẩm";
    int productId = ViewBag.ProductId;
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="~/Product">Sản phẩm</a></li>
        <li class="breadcrumb-item"><a href="~/Product/Detail/@productId">Chi tiết</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thuộc tính</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Thuộc tính sản phẩm</h3>
        <div class="card-tools">
            <a href="~/Product/CreateAttributes/@productId" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm thuộc tính
            </a>
            <a href="~/Product/Detail/@productId" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
    <div class="card-body">
        <!--begin::Table-->
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Tên thuộc tính</th>
                    <th>Giá trị</th>
                    <th>Thứ tự hiển thị</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var attr in Model)
                    {
                        <tr>
                            <td>@attr.AttributeID</td>
                            <td>@attr.AttributeName</td>
                            <td>@attr.AttributeValue</td>
                            <td>@attr.DisplayOrder</td>
                            <td class="text-center">
                                <a href="~/Product/EditAttributes/@productId/@attr.AttributeID" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                <a href="~/Product/DeleteAttribute/@productId/@attr.AttributeID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
        <!--end::Table-->
    </div>
</div>
<!--end::Card-->