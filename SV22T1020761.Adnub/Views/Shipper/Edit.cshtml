@model SV22T1020761.Models.Shipper

@{
    ViewBag.Title = "Sửa người giao hàng";
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="~/Shipper">Người giao hàng</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sửa</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sửa người giao hàng</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="ShipperName" class="form-label">Tên người giao hàng <span class="text-danger">*</span></label>
                        <input type="text" id="ShipperName" name="ShipperName" class="form-control" value="@Model.ShipperName" required />
                        <span asp-validation-for="ShipperName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="Phone" class="form-label">Điện thoại</label>
                        <input type="text" id="Phone" name="Phone" class="form-control" value="@Model.Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Lưu
                    </button>
                    <a href="~/Shipper" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<!--end::Card-->

@section Scripts {
    <script>
        // Client-side validation if needed
    </script>
}
