@model SV22T1020761.Models.PaginationSearchResult<SV22T1020761.Models.Shipper>

@{
    ViewBag.Title = "Danh sách người giao hàng";
}

<!--begin::Breadcrumb-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Người giao hàng</li>
    </ol>
</nav>
<!--end::Breadcrumb-->

<!--begin::Card-->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách người giao hàng</h3>
        <div class="card-tools">
            <a href="~/Shipper/Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>
    </div>
    <div class="card-body">
        <!--begin::Search Form-->
        <form method="get" class="mb-3">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" name="searchValue" value="@Model.SearchValue" class="form-control" placeholder="Tìm kiếm theo tên người giao hàng..." />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
        <!--end::Search Form-->

        <!--begin::Table-->
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Tên người giao hàng</th>
                    <th>Điện thoại</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Data != null && Model.Data.Count > 0)
                {
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.ShipperID</td>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td class="text-center">
                                <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
        <!--end::Table-->

        <!--begin::Pagination-->
        @if (Model.RowCount > Model.PageSize)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= (Model.RowCount + Model.PageSize - 1) / Model.PageSize; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" href="?page=@i&searchValue=@Model.SearchValue">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
        <!--end::Pagination-->
    </div>
</div>
<!--end::Card-->
