@model SV22T1020761.Models.Supplier

@{
    ViewBag.Title = "Xóa nhà cung cấp";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa nhà cung cấp</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="~/Supplier/Index">Nhà cung cấp</a></li>
                        <li class="breadcrumb-item active">Xóa</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Xác nhận xóa nhà cung cấp</h3>
                        </div>
                        <div class="card-body">
                            <p>Bạn có chắc chắn muốn xóa nhà cung cấp này?</p>
                            <dl class="row">
                                <dt class="col-sm-3">ID</dt>
                                <dd class="col-sm-9">@Model.SupplierID</dd>
                                <dt class="col-sm-3">Tên nhà cung cấp</dt>
                                <dd class="col-sm-9">@Model.SupplierName</dd>
                                <dt class="col-sm-3">Tên liên hệ</dt>
                                <dd class="col-sm-9">@Model.ContactName</dd>
                                <dt class="col-sm-3">Tỉnh</dt>
                                <dd class="col-sm-9">@Model.Province</dd>
                                <dt class="col-sm-3">Địa chỉ</dt>
                                <dd class="col-sm-9">@Model.Address</dd>
                                <dt class="col-sm-3">Điện thoại</dt>
                                <dd class="col-sm-9">@Model.Phone</dd>
                                <dt class="col-sm-3">Email</dt>
                                <dd class="col-sm-9">@Model.Email</dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <form asp-action="Delete" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </form>
                            <a href="~/Supplier/Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Hủy
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>