@model IList<SV22T1020761.Models.Supplier>

@{
    ViewBag.Title = "Nhà cung cấp";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách nhà cung cấp</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Nhà cung cấp</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách nhà cung cấp</h3>
                            <div class="card-tools">
                                <a href="~/Supplier/Create" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> Thêm mới
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="get" action="~/Supplier/Index">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <input type="text" name="searchValue" value="@(Context.Request.Query["searchValue"])" class="form-control" placeholder="Tìm kiếm theo tên..." />
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-secondary">
                                            <i class="fas fa-search"></i> Tìm kiếm
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên nhà cung cấp</th>
                                        <th>Tên liên hệ</th>
                                        <th>Tỉnh</th>
                                        <th>Địa chỉ</th>
                                        <th>Điện thoại</th>
                                        <th>Email</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var max = Model == null ? 0 : (Model.Count < 5 ? Model.Count : 5); }
                                    @for (int i = 0; i < max; i++)
                                    {
                                        var item = Model[i];
                                        <tr>
                                            <td>@item.SupplierID</td>
                                            <td>@item.SupplierName</td>
                                            <td>@item.ContactName</td>
                                            <td>@item.Province</td>
                                            <td>@item.Address</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td>
                                                <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </a>
                                                <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- pagination removed when using mock list (showing up to 5 items) -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
